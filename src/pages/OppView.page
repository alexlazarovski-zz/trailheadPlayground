<apex:page id="OppView" standardController="Opportunity">
    <apex:pageBlock >
        <apex:pageBlockSection columns="1">

            <apex:outputField value="{!Opportunity.Name}"></apex:outputField>
            <apex:outputField value="{!Opportunity.Amount}"></apex:outputField>
            <apex:outputField value="{!Opportunity.CloseDate}"></apex:outputField>
            <apex:outputField value="{!Opportunity.Account.Name}"></apex:outputField>

        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>